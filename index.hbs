{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

<body class="home page loading">
  <div id="twophat-site-wrapper" class="clearfix">
    <div id="twophat-site" class="clearfix">
        {{#is "paged"}}
            {{> header extraclass="always-filled"}}
        {{else}}
            {{> header}}
        {{/is}}
        <div class="header-bottom-border"></div>

        {{^is "paged"}}
        {{! Featured posts only show on the first page }}
        {{> index/slider}}
        <div id="twophat-body-wrapper">
        {{else}}
        <div id="twophat-body-wrapper" style="padding-top: 75px;">
        {{/is}}
        {{! The main content area on the homepage }}
            <div id="twophat-recipes-wrapper" class="clearfix boxed">
                <div id="twophat-recipes" class="clearfix isotope-wrapper ">
                  {{! The tag below includes the post loop - partials/post/loop.hbs }}
                  {{> "index/loop"}}
                </div>
            </div>
            {{pagination}}
        </div>
        <!-- END OF #twophat-body-wrapper -->
        {{> footer}}
    </div>
    <!-- END OF #twophat-site -->
    {{> includes/footer}}
  </div>
  <!-- END OF #twophat-site-wrapper -->
