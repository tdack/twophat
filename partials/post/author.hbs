{{#primary_author}}
<div class="post-author-wrapper">
	<div class="post-author">
		<div class="author-data">
			<div class="author-name"><a href='{{url}}'>{{name}}</a></div>
			<div class="author-description">
				{{bio}}
			</div>
			<div class="author-social-links">
				<div class="social-btns clearfix">
					{{> includes/social}}
				</div>
			</div>
		</div>
		<div class="author-avatar">
			<a href="{{website}}"><img alt='' src='{{profile_image}}' srcset='{{profile_image}} 2x' class='avatar avatar-64 photo'
					height='64' width='64' /><i class="fa fa-long-arrow-right overlay"></i></a>
		</div>
	</div>
</div>
{{/primary_author}}
