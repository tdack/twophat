<div id="adjacent-posts-wrapper">
    <div id="adjacent-posts" class="clearfix">
            {{#next_post}}
            <div class="adjacent-post next-post clearfix">
                <div class="adjacent-post-data">
                    <div class="adjacent-post-label">Next Recipe</div>
                    <div class="adjacent-post-title">
                        <h4 class="post-title"><a href="{{url}}">{{title}}</a></h4>
                    </div>
                </div>
                  {{#if feature_image}}
                    <div class="adjacent-post-thumbnail">
                        <a href="{{url}}">
                            <img width="60" height="60" src="{{img_url}}" class="attachment-60-60-thumbnail size-60-60-thumbnail wp-post-image" alt="{{slug}}" srcset="{{img_url}} 150w, {{img_url}} 60w" sizes="(max-width: 60px) 100vw, 60px" />
                            <i class="fa fa-long-arrow-left overlay"></i>
                        </a>
                    </div>
                  {{/if}}
            </div>
            {{/next_post}}
            {{#prev_post}}
            <div class="adjacent-post previous-post clearfix">
                <div class="adjacent-post-data">
                    <div class="adjacent-post-label">Previous Recipe</div>
                    <div class="adjacent-post-title">
                        <h4 class="post-title"><a href="{{url}}">{{title}}</a></h4>
                    </div>
                </div>
                  {{#if feature_image}}
                    <div class="adjacent-post-thumbnail">
                        <a href="{{url}}">
                            <img width="60" height="60" src="{{img_url}}" class="attachment-60-60-thumbnail size-60-60-thumbnail wp-post-image" alt="{{slug}}" srcset="{{img_url}} 150w, {{img_url}} 60w" sizes="(max-width: 60px) 100vw, 60px" />
                            <i class="fa fa-long-arrow-right overlay"></i>
                        </a>
                    </div>
                  {{/if}}
            </div>
            {{/prev_post}}
    </div>
