{{! This is the post loop - each post will be output using this markup }}
<!-- Post grid -->
{{#foreach posts}}
<div class="recipe-grid-wrapper isotope-element">
    <div class="recipe-grid clearfix post-{{comment_id}} twophat-recipes type-twophat-recipes status-publish format-standard has-post-thumbnail hentry twophat-recipe-categories-sweets twophat-recipe-tags-muffins twophat-recipe-tags-pastry">
        <div class="recipe-header">
        {{#if feature_image}}
            <div class="recipe-thumbnail-wrapper">
                <img width="760" height="470" src="{{feature_image}}" class="attachment-760-470-thumbnail size-760-470-thumbnail wp-post-image" alt="{{title}}" />
                <a class="thumbnail-overlay" href="{{url}}"><span>Details</span></a>
            </div>
        {{/if}}
        </div>
        <div class="recipe-body">
            <h1 class="recipe-title"><a href="{{url}}">{{{title}}}</a></h1>
            {{> includes/separator}}
            <div class="recipe-meta">
                {{#if tags}}
                {{#foreach tags limit="1"}}
                  <p>In <a property="recipeCategory" content="" href="{{url}}">{{name}}</a>
                {{/foreach}}
                {{/if}}
                {{#primary_author}}
                <br />by <a href="{{url}}">{{name}}</a> on <a href="{{../url}}">{{date ../published_at format="DD MMMM YYYY"}}</a></p>
                {{/primary_author}}
          </div>
        </div>
    </div>
</div>
{{/foreach}}
<!-- End Post grid -->
