{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}
{{! Everything inside the #author tags pulls data from the author }}
{{#primary_author}}
    <body class="archive author author-{{comment_id}}">
        <div id="space-site-wrapper" class="clearfix">
            <div id="space-site" class="clearfix">
                {{> header}}
                <div class="header-bottom-border"></div>
                <div id="space-archives-header-wrapper">
                    {{! If we have a cover, display that - else blog cover - else nothing }}
                    <div id="archives-header-background" {{#if cover_image}} style="background-image: url({{cover_url}})" {{else}} {{#if @site.cover_image}} style="background-image: url({{@site.cover_image}})" {{else}} no-cover {{/if}} {{/if}}></div>
                    <div id="space-archives-header">
                        <div class="header-column column-to-left">
                            <h1 class="header-title" style="text-transform: capitalize;">{{name}}</h1>
                        </div>
                        <div class="header-column column-to-right">
                        </div>
                    </div>
                </div>
{{/primary_author}}
                <div id="space-body-wrapper">
                    <div id="space-recipes-wrapper" class="clearfix boxed">
                        <div id="space-recipes" class="clearfix isotope-wrapper ">
                            {{! The tag below includes the post loop - partials/post/loop.hbs }}
                            {{> "index/loop"}}
                        </div>
                    </div>
                    {{pagination}}
                </div>
                <!-- END OF #twophat-body-wrapper -->
                {{> footer}}
            </div>
            <!-- END OF #twophat-site -->
            {{> includes/footer}}
        </div>
        <!-- END OF #twophat-site-wrapper -->
